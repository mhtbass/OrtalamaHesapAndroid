<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="20sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_birinciSayi"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginRight="37dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/btn_temizle" />

    <EditText
        android:id="@+id/et_ikinciSayi"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/et_birinciSayi"
        android:layout_alignStart="@+id/et_birinciSayi"
        android:layout_below="@+id/et_birinciSayi"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/et_4"
        android:text="4. "
        android:textSize="20sp"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/et_3"
        android:text="3."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2."
        android:textSize="20sp"
        android:layout_below="@+id/et_birinciSayi"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sonuç:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/tv_sonuc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_sonuc"
        android:layout_height="50dp"
        android:layout_width="215dp"
        android:textSize="20sp"
        android:layout_below="@+id/et_4"
        android:layout_alignStart="@+id/et_4"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/btn_ort"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:layout_above="@+id/btn_temizle"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Temizle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_temizle"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_3"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/et_ikinciSayi"
        android:layout_below="@+id/et_ikinciSayi"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_4"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/et_3"
        android:layout_below="@+id/et_3"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/k3"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/et_3"
        android:layout_toEndOf="@+id/et_birinciSayi"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/k2"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/et_ikinciSayi"
        android:layout_toEndOf="@+id/et_birinciSayi"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/k4"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/et_4"
        android:layout_alignStart="@+id/k3"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/k1"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_above="@+id/et_ikinciSayi"
        android:layout_toEndOf="@+id/et_birinciSayi"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Ders Saati"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/et_birinciSayi" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Ders Ortlaması"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/et_birinciSayi" />

</RelativeLayout>